---
import background from '../assets/IMG_0499.jpg';
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
</div>

<style>
	#background {
		opacity: .75;
		position: fixed;
		object-fit: cover;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}
</style>