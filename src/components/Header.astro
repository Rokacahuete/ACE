---
import logo from '../assets/Logo.png';
---

<div class="container centered">
    <img class="logo" src={logo.src} alt="Logo">
</div>

<style>
    .container {
        width: 100%;
        background-color: rgba(255, 0, 0, .5);
        border-radius: 15px;
    }
    
    .logo {
        margin: 20px;
    }

	.centered {
		display: flex;
		align-items: center;
		text-align: center;
		flex-direction: column;
	}

	@media (min-width: 768px) {
        .container.centered {
            display: block;
            text-align: start;
        }
    }
</style>