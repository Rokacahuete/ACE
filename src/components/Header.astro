<style>
    .container {
        width: 100%;
        background-color: rgba(255, 0, 0, .5);
        border-radius: 15px;
    }
    
    .logo {
        margin: 20px;
    }

	.centered {
		display: flex;
		align-items: center;
		text-align: center;
