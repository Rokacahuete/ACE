---
const { title, class: classname } = Astro.props;
---

<div class=`section-container glass centered ${classname ?? ""}`>
	{ title ? <h1>{title}</h1> : "" }
	<slot />
</div>

<style>
	.centered {
		display: flex;
		align-items: center;
		text-align: center;
		flex-direction: column;
	}
	
	.section-container {
	padding-top: 20px;
        flex: 1 1 300px;
		max-width: 650px;
		text-align: center;
		background-color: var(--second-color);
    	border: 7px solid var(--border-color);
  		box-sizing: border-box;
    	border-radius: 30px;
	}

    .glass {
        box-shadow : 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter : blur(7px);
        -webkit-backdrop-filter : blur(7px);
    }

	h1 {
		background-color: var(--title-color);
		border: 5px solid var(--border-color);
		border-radius: 10px;
		padding: 5px 0px;
		margin-top: 0;
		width: 90%;
	}

	:global(.section-container>*) {
		max-width: 90%;
	}

	:global(.section-container .text) {
		box-sizing: border-box;
		margin-top: auto;
	}
	
	:global(.section-container img) {
		max-height: 300px;
		border: 4px solid var(--border-color);
		border-radius: 10px;
		margin-bottom: 20px;
	}
</style>