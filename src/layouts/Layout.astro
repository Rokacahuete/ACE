---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Background from '../components/Background.astro';

import Logo from '../assets/favicon.png';
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href={Logo.src} />
		<meta name="generator" content={Astro.generator} />
		<title>ACE Transport</title>
	</head>
	<body>
		<div class="page">
			<header>
				<Header />
			</header>
			<Background />
			<main class="content">
				<slot />
			</main>
			<footer>
				<Footer />
			</footer>
		</div>
	</body>
</html>

<style>
	:global(*) {
		color: black;
	}

	:global(html) {
		--main-color: rgba(170, 170, 170, 0.5);
		--second-color: rgba(207, 207, 207, 0.5);
		--border-color: rgba(169, 169, 169, 0.5);
		--title-color: rgba(128, 128, 128, 0.5);
		--text-color: rgba(168, 168, 168, 0.5);
		
		--button-color: rgba(128, 128, 128, 0.5);
		--button-hover: rgb(128, 128, 128);
	}

	html, body {
		overflow-x: hidden;
		height: 100%;
		margin: 0;
	}

	.centered {
		display: flex;
		align-items: center;
		text-align: center;
		flex-direction: column;
	}

	.page {
		padding: 8px;
		min-height: calc(100vh - 16px);
		display: flex;
		flex-direction: column;
	}

	.content {
		flex: 1;
	}
</style>